<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <a href="/new"><button class="add-message-button">Add message</button></a>
    <ul class="message-list">
      <% messages.map(function(message) { %>
        <div class="message-container">
          <div class="user-heading-text">
            <p class="message-user"><strong><%= message.user %></strong></p>
            <p class="message-timestamp"><em>(<%= message.added %>)</em></p>
          </div>
          <p class="message-text">
            <%= message.text %>
          </p>
        </div>
      <% }); %>
    </ul>
  </body>
</html>
